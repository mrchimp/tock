{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build/types",
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "moduleResolution": "node",
  },
  "include": [
    "src/lib"
  ],
  "exclude": [
    "src/lib/**/tests"
  ],
}